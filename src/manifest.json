{
  "manifest_version": 3,
  "name": "ShepherdSync",
  "version": "1.0",
  "description": "Seamlessly sync Shepherd.vet appointments to your calendar",
  "permissions": ["activeTab", "downloads", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "http://127.0.0.1/*",
        "https://app.shepherd.vet/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {}
}
